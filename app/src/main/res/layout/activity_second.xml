<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Second_activity">


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#F9FCF1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:visibility="visible">

      <ImageView
          android:id="@+id/imageMenu"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_gravity="center"
          android:src="@drawable/ic_menu"
          app:tint="#201919" />

      <TextView
          android:id="@+id/textTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="15dp"
          android:text="Sheikh Hasina University"
          android:textColor="@color/black"
          android:textSize="18sp"
          android:textStyle="bold" />

    </LinearLayout>

  </RelativeLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <!--First Activity-->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:weightSum="5"
          android:orientation="vertical"
          android:paddingTop="5dp"
          android:layout_margin="10dp"
          android:gravity="center">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"

            android:orientation="horizontal">


          <androidx.cardview.widget.CardView
              android:id="@+id/academicsCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/academic" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Academic"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/contactCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/contact" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Contacts"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>


        </LinearLayout>


        <!--Second Linearlayout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">


          <androidx.cardview.widget.CardView
              android:id="@+id/calendarCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/calander" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Calendar"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />
            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/videosCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/videos" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Videos"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--Third Linearlayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">


          <androidx.cardview.widget.CardView
              android:id="@+id/transportCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/transport" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Transport"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/websiteCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/websitehome" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Website"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--fourth Linear layout-->

        <!--fifthth Linear layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">


          <androidx.cardview.widget.CardView
              android:id="@+id/cgpaCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/cgpa" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="CGPA Calculate"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/clubCardViewId"
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/club" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Club"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">


          <androidx.cardview.widget.CardView
              android:id="@+id/helpCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/help" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="Help"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/adminCardViewId"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="8dp"
              app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/about_shu" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="1dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:text="SHU History"
                  android:textAllCaps="false"
                  android:textColor="#000000"
                  android:textStyle="bold"

                  />


            </LinearLayout>
          </androidx.cardview.widget.CardView>


        </LinearLayout>


      </LinearLayout>

    </ScrollView>

  </LinearLayout>

  <com.google.android.material.navigation.NavigationView
      android:id="@+id/nav_View"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      app:headerLayout="@layout/drawar_head_layout"
      app:menu="@menu/navigation_menu" />

  </androidx.drawerlayout.widget.DrawerLayout>
