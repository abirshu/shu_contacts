<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Academic">
    <LinearLayout
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/cseButtonId"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/cse_logo"
            android:drawableRight="@drawable/getter_than_20_20"
            android:text="CSE"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <Button
            android:drawableLeft="@drawable/ban_logo"

            android:id="@+id/banButtonId"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Bangla"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:drawableRight="@drawable/getter_than_20_20"
            />

        <Button
            android:drawableLeft="@drawable/eng_logo"
            android:id="@+id/engButtonId"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="English"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:drawableRight="@drawable/getter_than_20_20"
            />

        <Button
            android:drawableLeft="@drawable/eco_logo"
            android:id="@+id/ecoButtonId"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Economics"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:layout_margin="2dp"
            android:drawableRight="@drawable/getter_than_20_20"
            />



    </LinearLayout>


</ScrollView>